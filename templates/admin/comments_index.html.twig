                      <td>
                        <a href="{{ path('comment', {'id': commentaire.id}) }}">show</a>
                        <a href="{{ path('commentaires_edit', {'id': commentaire.id}) }}">edit</a>
                        
                      </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>

