<div class="container">
{{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.nom, 'Nom du jeu') }}
        {{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.nom) }}
    </div>

    <div class="form-group">
        {{ form_label(form.date, 'Date de sortie du jeu') }}
        {{ form_widget(form.date, {'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.date) }}
    </div>

    <div class="form-group">
        {{ form_label(form.synopsis, 'Synopsis du jeu') }}
        {{ form_widget(form.synopsis, {'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.synopsis) }}
    </div>

    <div class="form-group">
        {{ form_label(form.streamer, 'Mon streamer favoris') }}
        {{ form_widget(form.streamer, {'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.streamer) }}
    </div>

    <button class="btn-success">{{ button_label|default('Valider') }}</button>

{{ form_end(form) }}
</div>
