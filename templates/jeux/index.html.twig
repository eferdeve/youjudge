                <td>{{ jeux.id }}</td>
                <td>{{ jeux.nom }}</td>
                <td>{{ jeux.date ? jeux.date|date('Y-m-d') : '' }}</td>
                <td>{{ jeux.notemoyenne }}</td>
                <td>
                    <a href="{{ path('jeux_show', {'id': jeux.id}) }}">show</a>
                    <a href="{{ path('jeux_edit', {'id': jeux.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
