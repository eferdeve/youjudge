{% extends 'baseback.html.twig' %}

{% block title %}Administration commentaires{% endblock %}

{% block body %}
    <h1>Commentaires</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ commentaire.contenu }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ commentaire.actif ? 'Yes' : 'No' }}</td>
