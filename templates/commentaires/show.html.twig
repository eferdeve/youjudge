                <td>{{ commentaire.createdAt ? commentaire.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('commentsList') }}">back to list</a>

    <a href="{{ path('commentaires_edit', {'id': commentaire.id}) }}">edit</a>

