{% extends 'basefront.html.twig' %}

{% block title %}fiche jeu{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ jeux.nom }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ jeux.Synopsis }}</td>
            </tr>
            <tr>
                <th>Date de sortie</th>
                <td>{{ jeux.date ? jeux.date|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Note moyenne attribuée par les joueurs</th>
                <td>{{ jeux.notemoyenne }}</td>
            </tr>
        </tbody>
    </table>

        

    <h3 class="text-center">Noter ce jeu</h3>
    <h3 class="text-center">"Afficher le form du CRUD de l'entité Note"</h3>

    
    

    <div class="container">
        <h3 class="text-center">Laissez un commentaire</h3>
        {{ include('commentaires/_form.html.twig') }}
    </div>

    <div class="container">
    <h3 class="text-center">Avis des autres joueurs</h3>
      {% for commentaire in commentaires %}
        <h3>Auteur</h3>
        <p>{{ commentaire.contenu }}</p>
      {% endfor %}
    </div>


{% endblock %}
