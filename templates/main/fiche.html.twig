{% extends 'basefront.html.twig' %}

{% block title %}fiche jeu{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ jeux.nom }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ jeux.Synopsis }}</td>
            </tr>
            <tr>
                <th>Date de sortie</th>
                <td>{{ jeux.date ? jeux.date|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Note moyenne attribu√©e par les joueurs</th>
                <th><h3><span class="badge badge-secondary">{{ moyenne.moyenne }} </span></h3></th>
            </tr>
        </tbody>
    </table>




        

    <a href="{{ path('notes_new', {'id': jeux.id}) }}">Noter ce jeu</a>


    
    

    <div class="container">
        <h3 class="text-center">Laissez un commentaire</h3>
        {{ include('commentaires/_form.html.twig') }}
    </div>

    <div class="container">
    <h3 class="text-center">Avis des autres joueurs</h3>
      {% for commentaire in commentaires %}
        <h3>Auteur</h3>
        <p>{{ commentaire.contenu }}</p>
      {% endfor %}
    </div>


{% endblock %}
