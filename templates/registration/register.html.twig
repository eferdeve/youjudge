{% extends 'basefront.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for message in app.flashes('erreur') %}
		<div class="alert alert-warning" role="alert">
 			 {{message}}
		</div>
	{% endfor %}
	<h2 class="text-center">Inscription</h2>

	{{ form_start(registrationForm) }}

		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.pseudo) }}
		{{ form_row(registrationForm.plainPassword) }}
		<div class="custom-control custom-checkbox">
			<input value='1' type="checkbox" class="custom-control-input" id="customCheck1" name="cgu">
			<label class="custom-control-label" for="customCheck1">Accepter les CGU</label>
		</div>
		<button type="submit" class="btn-success">Register</button>

	{{ form_end(registrationForm) }}
{% endblock %}
